<?php
$form = $this->form;
$form->prepare();

$form->setAttribute(
        'action', $this->url('tenil-user-register'), array(
    'controller' => 'index',
    'action' => 'register'
        )
);

echo $this->form()->openTag($form);

$id = $form->get('id');
echo $this->formHidden($id);

$security = $form->get('security');
echo $this->formElement($security);

echo '<div class="form-group">';
$nome = $form->get('nome');
echo $this->formLabel($nome);
echo '<div class="col-lg-10">';
echo $this->formInput($nome);
echo $this->formElementErrors($nome);
echo '</div>';
echo '</div>';


echo '<div class="form-group">';
$email = $form->get('email');
echo $this->formLabel($email);
echo '<div class="col-lg-10">';
echo $this->formInput($email);
echo $this->formElementErrors($email);
echo '</div>';
echo '</div>';

echo '<div class="form-group">';
$password = $form->get('password');
echo $this->formLabel($password);
echo '<div class="col-lg-10">';
echo $this->formInput($password);
echo $this->formElementErrors($password);
echo '</div>';
echo '</div>';

echo '<div class="form-group">';
$name = $form->get('submit');
echo '<div class="col-lg-offset-2 col-lg-10">';
echo $this->formSubmit($name);
echo '</div>';
echo '</div>';

echo $this->form()->closeTag();
?>
